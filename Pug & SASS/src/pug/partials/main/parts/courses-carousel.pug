        .carousel-inner.p-0.overflow-visible.d-none.d-md-block.d-lg-none
            .carousel-item.active
                .row.m-0
                    each course in props.courses.slice(0, 3)
                        include ../components/course
                        +course(course)
            each val in [1, 2]
                .carousel-item
                    .row.m-0
                        each course in props.courses.slice(val * 3, (val + 1) * 3)
                            include ../components/course
                            +course(course)
        +carouselButtons(`${props.id}-md`)

//- FOR LG SCREEN
