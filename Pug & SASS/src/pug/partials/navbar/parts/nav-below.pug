    const categories = [
        {name: 'Development', subCates: ['Web development', 'Mobile development', 'Programming Languages', 'Game Development', 'Database Design', 'Software Testing']},
        {name: 'Business', subCates: ['Entrepreneurship', 'Communication', 'Management', 'Sales', 'Business Strategy']},
        {name: 'Finance & Accounting', subCates: ['Accounting & Bookkeeping', 'Cryptocurrency & Blockchain', 'Finance', 'Financial Modeling & Analysis', 'Investing & Trading']},
        {name: 'IT Software',subCates: ['IT Certifications', 'Network & Security', 'Hardware', 'Operating System', 'Other IT & Software']},
        {name: 'Office Productivity', subCates: ['Microsoft', 'Apple', 'Google', 'SAP', 'Oracle', 'Other Office Productivity']}, 
        {name: 'Personal Development', subCates: ['Personal Transformation', 'Leadership', 'Career Development', 'Parenting & Relationship']}, 
        {name: 'Design', subCates: ['Web Design', 'Graphic Design & Illustration', 'Design Tools', 'User Experience Design', 'Game Design', 'Design Thinking']},
        {name: 'Marketing', subCates: ['Digital Marketing', 'Search Engine Optimization', 'Social Media Marketing', 'Branding', 'Marketing Fundamentals', 'Marketing Analytic']},
