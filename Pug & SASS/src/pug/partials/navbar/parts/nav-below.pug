.nav__below.mt-2.d-none.d-md-block
    //- MAIN CATEGORIES
    ul.nav__below-categories.list-group.flex-row.justify-content-between.align-items-center.position-relative
        each category in categories 
            //- SUBCATEGORIES
            .nav__below-category-ctn.p-2.flex-shrink-0
                li.nav__below-category.list-group-item.border-0.bg-inherit= category.name 
                include ../components/subcategories
                +subcategories(category.subCates)
        